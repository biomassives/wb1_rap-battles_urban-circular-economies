<style>
  /* Recovery Modal Overlay */
  .recovery-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10001;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    animation: fadeIn 0.5s ease-out;
  }

  .recovery-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(15px);
  }

  .recovery-container {
    position: relative;
    width: 100%;
    max-width: 1000px;
    max-height: 95vh;
    overflow-y: auto;
    padding: 3rem;
    background: var(--color-near-black);
