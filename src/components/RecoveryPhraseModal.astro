      0 0 15px rgba(0, 255, 0, 0.5);
    position: relative;
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    overflow: hidden;
    animation: borderPulse 2s ease-in-out infinite;
  }

  @keyframes borderPulse {
    0%, 100% {
      border-color: #00ff00;
      box-shadow:
        inset 0 0 30px rgba(0, 255, 0, 0.2),
        0 0 15px rgba(0, 255, 0, 0.5);
    }
    50% {
      border-color: #00ff88;
      box-shadow:
        inset 0 0 40px rgba(0, 255, 136, 0.3),
