    font-weight: 900;
    font-size: 1.25rem;
  }

  .checklist-text {
    font-size: 0.95rem;
    line-height: 1.6;
    flex: 1;
  }

  .checklist-progress {
    text-align: center;
    margin-top: 1.5rem;
    padding: 1rem;
    background: var(--color-near-black);
    border: 2px solid var(--color-mid-gray);
    font-size: 1.125rem;
    font-weight: 900;
  }

  .checklist-progress #checklistCount {
    color: var(--color-neon-green);
    font-size: 1.5rem;
  }

  /* Actions */
  .recovery-actions {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .btn-recovery {
    flex: 1;
    padding: 1.5rem 2rem;
    font-size: 1.25rem;
