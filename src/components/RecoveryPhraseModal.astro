    border-color: var(--color-neon-cyan);
    background: rgba(0, 255, 255, 0.03);
  }

  .warning-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .warning-icon-text {
    font-size: 1.75rem;
  }

  .warning-title {
    font-size: 1.125rem;
    font-weight: 900;
    letter-spacing: 1px;
  }

  .warning-content {
    font-size: 0.95rem;
    line-height: 1.7;
    padding-left: 2.5rem;
  }

  /* Phrase Display */
