    text-align: center;
    margin-bottom: 2.5rem;
  }

  .warning-icon {
    font-size: 5rem;
    margin-bottom: 1rem;
    animation: pulse 2s ease-in-out infinite;
  }

  .recovery-title {
    font-size: 3rem;
    font-weight: 900;
    font-family: var(--font-mono);
    letter-spacing: 4px;
    margin-bottom: 0.75rem;
  }

  .recovery-subtitle {
    font-size: 1.25rem;
    font-weight: 700;
  }

  /* Security Warnings */
  .security-warnings {
    display: grid;
    gap: 1.25rem;
    margin-bottom: 2.5rem;
  }

  .warning-box {
    padding: 1.5rem;
    border: 3px solid;
    background: var(--color-black);
  }

  .warning-box.critical {
    border-color: #dc2626;
    background: rgba(220, 38, 38, 0.05);
