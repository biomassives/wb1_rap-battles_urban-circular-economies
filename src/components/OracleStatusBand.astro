---
/**
 * OracleStatusBand.astro
 * Visual indicator showing E8 Oracle operational status
 * Space Invaders √ó Two-Tone Ska theme
 */

interface Props {
  walletAddress?: string;
}

const { walletAddress } = Astro.props;
---

<div class="oracle-status-band" id="oracle-status-band">
  <!-- Animated Color Band -->
  <div class="oracle-band-container">
    <div class="ska-checkerboard-bg"></div>

    <!-- Oracle Bubble (animated) -->
    <div class="oracle-bubble-wrapper">
      <div class="oracle-bubble" id="oracle-bubble">
        <div class="bubble-core"></div>
        <div class="bubble-ring ring-1"></div>
        <div class="bubble-ring ring-2"></div>
        <div class="bubble-ring ring-3"></div>

        <!-- Particle effects -->
        <div class="bubble-particles">
          <span class="particle p1">‚Ä¢</span>
          <span class="particle p2">‚Ä¢</span>
          <span class="particle p3">‚Ä¢</span>
          <span class="particle p4">‚Ä¢</span>
        </div>
      </div>

      <!-- Status Icon -->
      <div class="oracle-icon" id="oracle-icon">
        <span class="icon-symbol">üîÆ</span>
      </div>
    </div>

    <!-- Status Text -->
    <div class="oracle-status-text">
      <div class="status-label mono">E8 ORACLE</div>
      <div class="status-state" id="oracle-state">ACTIVE</div>
      <div class="status-mode" id="oracle-mode">Post-Quantum Secure</div>
    </div>

    <!-- Query Counter -->
    <div class="oracle-metrics">
      <div class="metric">
        <div class="metric-value" id="query-count">0</div>
        <div class="metric-label">Queries</div>
      </div>
      <div class="metric">
        <div class="metric-value" id="proof-count">0</div>
        <div class="metric-label">Proofs</div>
      </div>
    </div>

    <!-- Toggle Button -->
    <button class="oracle-toggle-btn btn-retro-neon" id="oracle-toggle">
      <span class="toggle-icon">‚ö°</span>
      <span class="toggle-text">ORACLE ON</span>
    </button>
  </div>

  <!-- Expanded Details (collapsible) -->
  <div class="oracle-details" id="oracle-details" style="display: none;">
    <div class="details-grid">
      <!-- Encryption Status -->
      <div class="detail-card">
        <div class="detail-icon">üîê</div>
        <div class="detail-title">Encryption</div>
        <div class="detail-value">E8 Lattice</div>
        <div class="detail-status">‚úÖ Quantum-Safe</div>
      </div>

      <!-- Consent Token -->
      <div class="detail-card">
        <div class="detail-icon">üé´</div>
        <div class="detail-title">Consent NFT</div>
        <div class="detail-value" id="consent-token-id">Loading...</div>
        <div class="detail-status">‚úÖ Minted</div>
      </div>

      <!-- Public Key -->
      <div class="detail-card">
        <div class="detail-icon">üîë</div>
        <div class="detail-title">Public Key</div>
        <div class="detail-value mono small" id="public-key">E8(...)</div>
        <div class="detail-status">‚úÖ Active</div>
      </div>

      <!-- Oracle Endpoint -->
      <div class="detail-card">
        <div class="detail-icon">üåê</div>
        <div class="detail-title">Oracle URL</div>
        <div class="detail-value small" id="oracle-url">oracle.purplepoint.xyz</div>
        <button class="copy-btn">üìã</button>
      </div>
    </div>

    <!-- Permissions Grid -->
    <div class="permissions-section">
      <h4 class="permissions-title">Data Permissions</h4>
      <div class="permissions-grid">
        <label class="permission-toggle">
          <input type="checkbox" checked data-permission="readXP">
          <span class="toggle-label">Read XP</span>
        </label>
        <label class="permission-toggle">
          <input type="checkbox" checked data-permission="readMusic">
          <span class="toggle-label">Music Stats</span>
        </label>
        <label class="permission-toggle">
          <input type="checkbox" data-permission="readEnvironmental">
          <span class="toggle-label">Environmental</span>
        </label>
        <label class="permission-toggle">
          <input type="checkbox" checked data-permission="readKakuma">
          <span class="toggle-label">Kakuma Impact</span>
        </label>
        <label class="permission-toggle">
          <input type="checkbox" checked data-permission="zkProve">
          <span class="toggle-label">ZK Proofs</span>
        </label>
        <label class="permission-toggle">
          <input type="checkbox" data-permission="aggregate">
          <span class="toggle-label">Aggregation</span>
        </label>
      </div>
    </div>
  </div>

  <!-- Expand/Collapse Button -->
  <button class="oracle-expand-btn" id="oracle-expand-btn">
    <span class="expand-text">Show Details</span>
    <span class="expand-arrow">‚ñº</span>
  </button>
</div>

<style>
  /* Oracle Status Band Container */
  .oracle-status-band {
    background: var(--color-black);
    border: 3px solid var(--color-white);
    padding: 1.5rem;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
  }

  .oracle-band-container {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    position: relative;
    z-index: 2;
  }

  /* Ska Checkerboard Background */
  .ska-checkerboard-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      repeating-linear-gradient(
        45deg,
        var(--color-black) 0px,
        var(--color-black) 10px,
        var(--color-white) 10px,
        var(--color-white) 20px
      );
    opacity: 0.05;
    z-index: 0;
    animation: slideCheckerboard 20s linear infinite;
  }

  @keyframes slideCheckerboard {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(28px, 28px);
    }
  }

  /* Oracle Bubble Animation */
  .oracle-bubble-wrapper {
    position: relative;
    width: 80px;
    height: 80px;
    flex-shrink: 0;
  }

  .oracle-bubble {
    width: 80px;
    height: 80px;
    position: relative;
  }

  .bubble-core {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 30px;
    height: 30px;
    background: var(--color-neon-green);
    border-radius: 50%;
    box-shadow:
      0 0 20px var(--color-neon-green),
      0 0 40px var(--color-neon-green),
      inset 0 0 10px rgba(255, 255, 255, 0.5);
    animation: bubblePulse 2s ease-in-out infinite;
  }

  @keyframes bubblePulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0.8;
    }
  }

  .bubble-ring {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 2px solid var(--color-neon-green);
    border-radius: 50%;
    opacity: 0.6;
  }

  .ring-1 {
    width: 45px;
    height: 45px;
    animation: ringExpand 2s ease-in-out infinite;
  }

  .ring-2 {
    width: 60px;
    height: 60px;
    animation: ringExpand 2s ease-in-out 0.3s infinite;
  }

  .ring-3 {
    width: 75px;
    height: 75px;
    animation: ringExpand 2s ease-in-out 0.6s infinite;
  }

  @keyframes ringExpand {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.6;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.1);
      opacity: 0.3;
    }
  }

  /* Particles */
  .bubble-particles {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .particle {
    position: absolute;
    color: var(--color-neon-green);
    font-size: 1.5rem;
    opacity: 0;
    animation: particleFloat 3s ease-in-out infinite;
  }

  .p1 {
    top: 10%;
    left: 50%;
    animation-delay: 0s;
  }

  .p2 {
    top: 50%;
    right: 10%;
    animation-delay: 0.5s;
  }

  .p3 {
    bottom: 10%;
    left: 50%;
    animation-delay: 1s;
  }

  .p4 {
    top: 50%;
    left: 10%;
    animation-delay: 1.5s;
  }

  @keyframes particleFloat {
    0%, 100% {
      transform: translateY(0) scale(0.8);
      opacity: 0;
    }
    25% {
      opacity: 0.8;
    }
    50% {
      transform: translateY(-20px) scale(1.2);
      opacity: 1;
    }
    75% {
      opacity: 0.8;
    }
  }

  /* Oracle Icon */
  .oracle-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2rem;
    z-index: 10;
    animation: iconBob 3s ease-in-out infinite;
  }

  @keyframes iconBob {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-5px);
    }
  }

  /* Status Text */
  .oracle-status-text {
    flex: 1;
    min-width: 200px;
  }

  .status-label {
    font-size: 0.875rem;
    color: var(--color-light-gray);
    font-weight: 700;
    letter-spacing: 2px;
    margin-bottom: 0.25rem;
  }

  .status-state {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--color-neon-green);
    text-shadow: 0 0 10px var(--color-neon-green);
    margin-bottom: 0.25rem;
  }

  .status-mode {
    font-size: 0.875rem;
    color: var(--color-white);
    font-family: var(--font-mono);
  }

  /* Metrics */
  .oracle-metrics {
    display: flex;
    gap: 2rem;
  }

  .metric {
    text-align: center;
    padding: 0.75rem 1rem;
    background: var(--color-near-black);
    border: 2px solid var(--color-neon-green);
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.2);
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 900;
    color: var(--color-neon-green);
    font-family: var(--font-mono);
    line-height: 1;
  }

  .metric-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-light-gray);
    margin-top: 0.25rem;
  }

  /* Toggle Button */
  .oracle-toggle-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    white-space: nowrap;
  }

  .toggle-icon {
    font-size: 1.25rem;
  }

  /* Details Section */
  .oracle-details {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid var(--color-mid-gray);
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      max-height: 0;
    }
    to {
      opacity: 1;
      max-height: 1000px;
    }
  }

  .details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .detail-card {
    background: var(--color-near-black);
    border: 2px solid var(--color-white);
    padding: 1rem;
    text-align: center;
    position: relative;
  }

  .detail-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .detail-title {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-light-gray);
    margin-bottom: 0.5rem;
  }

  .detail-value {
    font-family: var(--font-mono);
    font-size: 0.95rem;
    color: var(--color-white);
    margin-bottom: 0.5rem;
    word-break: break-all;
  }

  .detail-value.small {
    font-size: 0.75rem;
  }

  .detail-status {
    font-size: 0.75rem;
    color: var(--color-neon-green);
    font-weight: 700;
  }

  .copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: none;
    border: none;
    font-size: 1.25rem;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .copy-btn:hover {
    opacity: 1;
  }

  /* Permissions */
  .permissions-section {
    background: var(--color-near-black);
    border: 2px solid var(--color-white);
    padding: 1.5rem;
  }

  .permissions-title {
    font-size: 1.25rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1rem;
    color: var(--color-white);
  }

  .permissions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
  }

  .permission-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    padding: 0.5rem;
    border: 2px solid transparent;
    transition: border-color 0.2s;
  }

  .permission-toggle:hover {
    border-color: var(--color-neon-green);
  }

  .permission-toggle input[type="checkbox"] {
    width: 20px;
    height: 20px;
  }

  .toggle-label {
    font-size: 0.875rem;
    color: var(--color-white);
    font-family: var(--font-mono);
  }

  /* Expand Button */
  .oracle-expand-btn {
    width: 100%;
    margin-top: 1rem;
    padding: 0.75rem;
    background: var(--color-mid-gray);
    border: 2px solid var(--color-white);
    color: var(--color-white);
    font-family: var(--font-mono);
    font-weight: 700;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.2s;
  }

  .oracle-expand-btn:hover {
    background: var(--color-white);
    color: var(--color-black);
  }

  .expand-arrow {
    transition: transform 0.3s;
  }

  .oracle-expand-btn.expanded .expand-arrow {
    transform: rotate(180deg);
  }

  /* Dormant State (Oracle OFF) */
  .oracle-status-band.dormant .bubble-core {
    background: var(--color-mid-gray);
    box-shadow: 0 0 10px var(--color-mid-gray);
    animation: none;
  }

  .oracle-status-band.dormant .bubble-ring {
    border-color: var(--color-mid-gray);
    animation: none;
  }

  .oracle-status-band.dormant .particle {
    animation: none;
    opacity: 0;
  }

  .oracle-status-band.dormant .status-state {
    color: var(--color-light-gray);
    text-shadow: none;
  }

  .oracle-status-band.dormant .metric {
    border-color: var(--color-mid-gray);
    box-shadow: none;
  }

  .oracle-status-band.dormant .metric-value {
    color: var(--color-light-gray);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .oracle-band-container {
      justify-content: center;
    }

    .oracle-bubble-wrapper {
      width: 60px;
      height: 60px;
    }

    .oracle-bubble {
      width: 60px;
      height: 60px;
    }

    .bubble-core {
      width: 20px;
      height: 20px;
    }

    .oracle-metrics {
      width: 100%;
      justify-content: center;
    }

    .details-grid {
      grid-template-columns: 1fr;
    }

    .permissions-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const band = document.getElementById('oracle-status-band');
    const toggle = document.getElementById('oracle-toggle');
    const expandBtn = document.getElementById('oracle-expand-btn');
    const details = document.getElementById('oracle-details');
    const bubble = document.getElementById('oracle-bubble');
    const stateEl = document.getElementById('oracle-state');
    const queryCount = document.getElementById('query-count');
    const proofCount = document.getElementById('proof-count');

    let isActive = true;
    let queries = 0;
    let proofs = 0;

    // Toggle oracle on/off
    toggle?.addEventListener('click', async () => {
      isActive = !isActive;

      if (isActive) {
        band?.classList.remove('dormant');
        stateEl.textContent = 'ACTIVE';
        toggle.querySelector('.toggle-text').textContent = 'ORACLE ON';

        // Call API to enable
        await fetch('/api/oracle/consent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            walletAddress: window.walletManager?.connectedWallet,
            action: 'ENABLE_ORACLE'
          })
        });

        console.log('üü¢ Oracle ACTIVATED');
      } else {
        band?.classList.add('dormant');
        stateEl.textContent = 'STANDBY';
        toggle.querySelector('.toggle-text').textContent = 'ORACLE OFF';

        // Call API to disable
        await fetch('/api/oracle/consent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            walletAddress: window.walletManager?.connectedWallet,
            action: 'DISABLE_ORACLE'
          })
        });

        console.log('‚ö™ Oracle in STANDBY mode');
      }
    });

    // Expand/collapse details
    expandBtn?.addEventListener('click', () => {
      const isExpanded = details?.style.display === 'block';

      if (isExpanded) {
        details.style.display = 'none';
        expandBtn.classList.remove('expanded');
        expandBtn.querySelector('.expand-text').textContent = 'Show Details';
      } else {
        details.style.display = 'block';
        expandBtn.classList.add('expanded');
        expandBtn.querySelector('.expand-text').textContent = 'Hide Details';

        // Load oracle details
        loadOracleDetails();
      }
    });

    // Simulate query activity (for demo)
    setInterval(() => {
      if (isActive && Math.random() > 0.7) {
        queries++;
        queryCount.textContent = queries;

        // Pulse animation on bubble
        bubble?.classList.add('query-flash');
        setTimeout(() => bubble?.classList.remove('query-flash'), 300);
      }

      if (isActive && Math.random() > 0.85) {
        proofs++;
        proofCount.textContent = proofs;
      }
    }, 5000);

    // Load oracle details
    async function loadOracleDetails() {
      const walletAddress = window.walletManager?.connectedWallet;
      if (!walletAddress) return;

      try {
        // Load from secureStorage
        if (window.secureStorage?.keyPair) {
          const publicKey = window.secureStorage.keyPair.publicKey;
          const tokenId = window.secureStorage.consentToken?.tokenId;

          document.getElementById('public-key').textContent =
            `E8(${publicKey.coords[0].toFixed(1)}, ...)`;

          document.getElementById('consent-token-id').textContent =
            tokenId?.substring(0, 16) + '...';
        }

        document.getElementById('oracle-url').textContent =
          `oracle.purplepoint.xyz/${walletAddress.substring(0, 8)}`;

      } catch (error) {
        console.error('Failed to load oracle details:', error);
      }
    }

    // Permission toggles
    document.querySelectorAll('.permission-toggle input').forEach(checkbox => {
      checkbox.addEventListener('change', async (e) => {
        const permission = e.target.dataset.permission;
        const granted = e.target.checked;

        console.log(`${granted ? 'Granted' : 'Revoked'}: ${permission}`);

        // Update via API
        await fetch('/api/oracle/consent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            walletAddress: window.walletManager?.connectedWallet,
            action: granted ? 'GRANT_PERMISSION' : 'REVOKE_PERMISSION',
            permission: permission
          })
        });
      });
    });

    console.log('üîÆ Oracle Status Band initialized');
  });
</script>
