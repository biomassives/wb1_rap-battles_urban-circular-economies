  }

  @media (max-width: 640px) {
    .dials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script is:inline src="/scripts/bio-synth-generator.js"></script>

<script define:vars={{ taxonomy }}>
const gen = new window.BioSynthGenerator();
const scope = document.getElementById('scope');
const ctx = scope.getContext('2d');

const PRESETS = {
  rap: { f: 180, d: 0.6, a: 0.9, m: 40 },
  reggae: { f: 41.2, d: 2, a: 0.8, m: 7.83 },
  healing: { f: 528, d: 10, a: 0.5, m: 7.83 },
  speech: { f: 220, d: 3, a: 0.6, m: 174 },
  singing: { f: 256, d: 6, a: 0.7, m: 128 }
};

const el = id => document.getElementById(id);

// Dial rotation logic
const dials = ['f', 'd', 'a', 'm'];
const dialParams = {
  f: { min: 20, max: 2000, step: 0.1 },
  d: { min: 0.1, max: 15, step: 0.1 },
  a: { min: 0, max: 1, step: 0.05 },
  m: { min: 0, max: 200, step: 0.1 }
};

function updateDial(param, value) {
  const p = dialParams[param];
  const normalized = (value - p.min) / (p.max - p.min);
  const angle = -135 + (normalized * 270); // -135 to +135 degrees

  const svg = document.querySelector(`.dial[data-param="${param}"]`);
  const indicator = svg.querySelector('.dial-indicator');
  const arc = svg.querySelector('.dial-arc');

  // Rotate indicator
  indicator.setAttribute('transform', `rotate(${angle} 50 50)`);

  // Draw arc
  const startAngle = -135;
  const endAngle = angle;
  const radius = 40;
  const largeArc = (endAngle - startAngle) > 180 ? 1 : 0;

  const start = polarToCartesian(50, 50, radius, startAngle);
  const end = polarToCartesian(50, 50, radius, endAngle);

  const d = `M ${start.x} ${start.y} A ${radius} ${radius} 0 ${largeArc} 1 ${end.x} ${end.y}`;
  arc.setAttribute('d', d);

  // Update display
  el(`${param}-display`).textContent = value.toFixed(param === 'a' ? 2 : 1);
}

function polarToCartesian(cx, cy, r, angle) {
  const rad = (angle - 90) * Math.PI / 180;
  return {
    x: cx + r * Math.cos(rad),
    y: cy + r * Math.sin(rad)
  };
}

// Make dials draggable
dials.forEach(param => {
  const svg = document.querySelector(`.dial[data-param="${param}"]`);
  const input = el(param);
  let isDragging = false;

  function handleMove(e) {
    if (!isDragging) return;

    const rect = svg.getBoundingClientRect();
    const centerX = rect.left + rect.width / 2;
    const centerY = rect.top + rect.height / 2;

    const clientX = e.clientX || (e.touches && e.touches[0].clientX);
    const clientY = e.clientY || (e.touches && e.touches[0].clientY);

    const dx = clientX - centerX;
    const dy = clientY - centerY;
    let angle = Math.atan2(dy, dx) * (180 / Math.PI) + 90;

    // Constrain to -135 to +135
    if (angle < -135) angle = -135;
    if (angle > 135) angle = 135;

    const p = dialParams[param];
    const normalized = (angle + 135) / 270;
    const value = p.min + normalized * (p.max - p.min);

    input.value = value;
    updateDial(param, value);

    if (el('auto-preview').checked) {
      autoPreviewDebounced();
    }
  }

  svg.addEventListener('mousedown', (e) => {
    isDragging = true;
    e.preventDefault();
  });

  svg.addEventListener('touchstart', (e) => {
    isDragging = true;
    e.preventDefault();
  });

  document.addEventListener('mousemove', handleMove);
  document.addEventListener('touchmove', handleMove);

  document.addEventListener('mouseup', () => isDragging = false);
  document.addEventListener('touchend', () => isDragging = false);

  // Scroll wheel support
  svg.addEventListener('wheel', (e) => {
    e.preventDefault();
    const p = dialParams[param];
    let value = parseFloat(input.value);
    const delta = e.deltaY > 0 ? -p.step : p.step;
    value = Math.max(p.min, Math.min(p.max, value + delta));
    input.value = value;
    updateDial(param, value);

    if (el('auto-preview').checked) {
      autoPreviewDebounced();
    }
  });
});

// Synthesis
function vector() {
  return {
    preset: el('preset').value,
    frequency: +el('f').value,
    duration: +el('d').value,
    intensity: +el('a').value,
    modulation: +el('m').value,
    created: new Date().toISOString()
  };
}

function synth(v) {
  const n = gen.sampleRate * v.duration;
  const a = new Float32Array(n);
  for (let i = 0; i < n; i++) {
    const t = i / gen.sampleRate;
    a[i] = Math.sin(2 * Math.PI * v.frequency * t
      + Math.sin(2 * Math.PI * v.modulation * t) * 0.3)
      * Math.exp(-t * 2) * v.intensity;
  }
  draw(a);
  return a;
}

function draw(a) {
  ctx.clearRect(0, 0, scope.width, scope.height);
  ctx.strokeStyle = '#58a6ff';
  ctx.lineWidth = 2;
  ctx.beginPath();

  for (let i = 0; i < a.length; i += 200) {
    const x = (i / a.length) * scope.width;
    const y = (1 - a[i]) * 60;
    if (i === 0) {
      ctx.moveTo(x, y);
    } else {
      ctx.lineTo(x, y);
    }
  }
  ctx.stroke();
}

// Auto-preview with debounce
let autoPreviewTimeout;
function autoPreviewDebounced() {
  clearTimeout(autoPreviewTimeout);
  autoPreviewTimeout = setTimeout(() => {
    const audio = synth(vector());
    gen.previewAudio(audio);
  }, 300);
}

// Preset handling
el('preset').onchange = () => {
  const p = PRESETS[el('preset').value];
  ['f', 'd', 'a', 'm'].forEach(k => {
    el(k).value = p[k];
    updateDial(k, p[k]);
  });

  if (el('auto-preview').checked) {
    autoPreviewDebounced();
  }
};

// Button handlers
el('preview').onclick = () => {
  const audio = synth(vector());
  gen.previewAudio(audio);
};

el('wav').onclick = () => {
  const v = vector();
  gen.downloadWav(
    gen.audioDataToWav(synth(v)),
    `${v.preset}-${v.frequency}Hz.wav`
  );
};

el('json').onclick = () => {
  const v = vector();
  const blob = new Blob([JSON.stringify(v, null, 2)], { type: 'application/json' });
  const a = document.createElement('a');
  a.href = URL.createObjectURL(blob);
  a.download = `${v.preset}-config.json`;
  a.click();
};

// Initialize
el('preset').value = 'rap';
el('preset').dispatchEvent(new Event('change'));
</script>
