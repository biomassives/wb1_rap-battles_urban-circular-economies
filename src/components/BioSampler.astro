<style>
  .bio-sampler {
    background: linear-gradient(135deg, #161b22 0%, #0d1117 100%);
    padding: 2rem;
    border-radius: 12px;
    max-width: 900px;
    margin: auto;
    border: 1px solid #30363d;
  }

  h2 {
    font-size: 1.75rem;
    margin: 0 0 1.5rem 0;
    color: #e6edf3;
    font-weight: 600;
  }

  .preset-section {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    font-size: 0.875rem;
    color: #8b949e;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  select {
    width: 100%;
    padding: 0.75rem;
    background: #0d1117;
    color: #e6edf3;
    border: 1px solid #30363d;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  select:hover {
    border-color: #58a6ff;
  }

  select:focus {
    outline: none;
    border-color: #58a6ff;
    box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.1);
  }

  .waveform-section {
    background: #000;
    border-radius: 8px;
    padding: 0.5rem;
    margin-bottom: 1.5rem;
    border: 1px solid #30363d;
  }

  canvas {
    width: 100%;
    height: 120px;
    display: block;
    border-radius: 4px;
  }

  .dials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .dial-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .dial-wrapper {
    position: relative;
    margin: 0.75rem 0;
  }

  .dial {
    cursor: pointer;
    transition: transform 0.1s;
  }

  .dial:hover {
    transform: scale(1.05);
  }

  .dial-value {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1rem;
    font-weight: 600;
    color: #e6edf3;
    pointer-events: none;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  input[type="range"] {
    width: 100%;
    opacity: 0;
    position: absolute;
    pointer-events: none;
  }

  .controls-section {
    margin-bottom: 1rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    color: #e6edf3;
    font-size: 0.95rem;
  }

  .checkbox-label input[type="checkbox"] {
