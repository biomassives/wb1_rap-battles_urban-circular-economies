          <path class="dial-arc" fill="none" stroke="#f59e0b" stroke-width="4" stroke-linecap="round"/>
          <line class="dial-indicator" x1="50" y1="50" x2="50" y2="15" stroke="#f59e0b" stroke-width="3" stroke-linecap="round"/>
