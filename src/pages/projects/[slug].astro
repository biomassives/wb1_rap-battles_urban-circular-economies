---
/**
 * projects/[slug].astro
 * PUBLIC PROJECT PAGE
 *
 * Displays user-created project pages for artists, scientists, and creators.
 * URLs like: /projects/pain-in-the-ghetto, /projects/porefec
 */

import BaseLayout from '../../layouts/BaseLayout.astro';

// Get slug from URL params
const { slug } = Astro.params;

// For SSR, we'll fetch data client-side to handle auth
// For SSG fallback, return placeholder paths
export function getStaticPaths() {
  return [
    { params: { slug: 'placeholder' } }
  ];
}

// Category icons and colors
const categoryStyles = {
  music: { icon: 'üéµ', color: '#8B5CF6', label: 'Music' },
  science: { icon: 'üî¨', color: '#3B82F6', label: 'Science' },
  art: { icon: 'üé®', color: '#EC4899', label: 'Art' },
  technology: { icon: 'üíª', color: '#10B981', label: 'Technology' },
  environment: { icon: 'üåç', color: '#22C55E', label: 'Environment' },
  education: { icon: 'üìö', color: '#F59E0B', label: 'Education' },
  general: { icon: 'üìÅ', color: '#6B7280', label: 'Project' }
