</BaseLayout>

<script define:vars={{ slug, categoryStyles }}>
  // Project page manager
  class ProjectPageManager {
    constructor() {
      this.slug = slug;
      this.project = null;
      this.categoryStyles = categoryStyles;
    }

    async initialize() {
      try {
        await this.loadProject();
      } catch (error) {
        console.error('Failed to load project:', error);
        this.showError('Failed to load project. Please try again later.');
      }
    }

    async loadProject() {
      const walletAddress = window.walletManager?.connectedWallet || '';

      const response = await fetch(`/api/projects/${this.slug}?walletAddress=${walletAddress}`);
      const data = await response.json();

      if (!data.success) {
        this.showError(data.error || 'Project not found');
        return;
      }

      this.project = data.project;
      this.renderProject();
    }

    renderProject() {
      const p = this.project;

      // Hide loading, show content
      document.getElementById('loading-state').style.display = 'none';
      document.getElementById('project-content').style.display = 'block';

      // Category styling
      const catStyle = this.categoryStyles[p.category] || this.categoryStyles.general;
      const badge = document.getElementById('category-badge');
      badge.style.backgroundColor = catStyle.color;
      document.getElementById('category-icon').textContent = catStyle.icon;
      document.getElementById('category-label').textContent = catStyle.label;

      // Title and subtitle
      document.getElementById('project-title').textContent = p.title;
      document.getElementById('project-subtitle').textContent = p.subtitle || '';
      document.title = `${p.title} - WorldBridger One`;

      // Hero background
      if (p.cover_image) {
        document.getElementById('hero-bg').style.backgroundImage = `url(${p.cover_image})`;
      }

      // Creator info
      const creatorName = p.owner_username || `${p.owner_wallet.substring(0, 4)}...${p.owner_wallet.substring(p.owner_wallet.length - 4)}`;
      document.getElementById('creator-name').textContent = creatorName;
      document.getElementById('creator-name').href = `/user/${p.owner_username || p.owner_wallet}`;
      document.getElementById('creator-initials').textContent = creatorName.substring(0, 2).toUpperCase();

      // Stats
      document.getElementById('view-count').textContent = p.view_count.toLocaleString();
      document.getElementById('like-count').textContent = p.like_count.toLocaleString();
      if (p.published_at) {
        const date = new Date(p.published_at);
        document.getElementById('publish-date').textContent = date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
      }

      // Like button state
      if (p.hasLiked) {
        document.getElementById('heart-icon').textContent = '‚ù§Ô∏è';
        document.getElementById('like-btn').classList.add('liked');
      }

      // Edit button (for owner)
      if (p.isOwner) {
        document.getElementById('edit-btn').style.display = 'inline-flex';
      }

      // Description
      document.getElementById('project-description').innerHTML = `<p>${p.description || ''}</p>`;

      // Content (render markdown)
      if (p.content) {
        document.getElementById('project-content-body').innerHTML = this.renderMarkdown(p.content);
      }

      // Media gallery
      const mediaUrls = typeof p.media_urls === 'string' ? JSON.parse(p.media_urls) : (p.media_urls || []);
      if (mediaUrls.length > 0) {
        document.getElementById('media-section').style.display = 'block';
        const grid = document.getElementById('media-grid');
        grid.innerHTML = mediaUrls.map(m => this.renderMediaItem(m)).join('');
      }

      // Tags
      const tags = p.tags || [];
      if (tags.length > 0) {
        document.getElementById('tags-section').style.display = 'block';
        document.getElementById('tags-list').innerHTML = tags.map(t =>
          `<a href="/projects?tag=${t}" class="tag">#${t}</a>`
        ).join('');
      }

      // External links
      const links = typeof p.links === 'string' ? JSON.parse(p.links) : (p.links || []);
      if (links.length > 0) {
        document.getElementById('links-card').style.display = 'block';
        document.getElementById('links-list').innerHTML = links.map(l =>
          `<a href="${l.url}" target="_blank" rel="noopener" class="external-link">
            <span class="link-icon">${this.getLinkIcon(l.icon)}</span>
            <span class="link-title">${l.title}</span>
            <span class="link-arrow">‚Üí</span>
          </a>`
        ).join('');
      }

      // Collaborators
      const collaborators = typeof p.collaborators === 'string' ? JSON.parse(p.collaborators) : (p.collaborators || []);
      if (collaborators.length > 0) {
        document.getElementById('collaborators-card').style.display = 'block';
        document.getElementById('collaborators-list').innerHTML = collaborators.map(c =>
          `<div class="collaborator">
            <div class="collab-avatar">${(c.name || c).substring(0, 2).toUpperCase()}</div>
            <span class="collab-name">${c.name || c}</span>
          </div>`
        ).join('');
      }
    }

    renderMarkdown(content) {
      // Simple markdown rendering
      return content
        .replace(/^### (.*$)/gim, '<h3>$1</h3>')
        .replace(/^## (.*$)/gim, '<h2>$1</h2>')
        .replace(/^# (.*$)/gim, '<h1>$1</h1>')
        .replace(/^\> (.*$)/gim, '<blockquote>$1</blockquote>')
        .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
        .replace(/\*(.*?)\*/g, '<em>$1</em>')
        .replace(/^\- (.*$)/gim, '<li>$1</li>')
        .replace(/^\d+\. (.*$)/gim, '<li>$1</li>')
        .replace(/\n\n/g, '</p><p>')
        .replace(/^(?!<[hblu])/gim, '<p>')
        .replace(/\n/g, '<br>');
    }

    renderMediaItem(media) {
      if (media.type === 'image') {
        return `<div class="media-item">
          <img src="${media.url}" alt="${media.caption || ''}" loading="lazy">
          ${media.caption ? `<p class="media-caption">${media.caption}</p>` : ''}
        </div>`;
      } else if (media.type === 'video') {
        return `<div class="media-item">
          <video src="${media.url}" controls></video>
          ${media.caption ? `<p class="media-caption">${media.caption}</p>` : ''}
        </div>`;
      } else if (media.type === 'audio') {
        return `<div class="media-item audio-item">
          <audio src="${media.url}" controls></audio>
          ${media.caption ? `<p class="media-caption">${media.caption}</p>` : ''}
        </div>`;
      }
      return '';
    }

    getLinkIcon(icon) {
      const icons = {
        spotify: 'üéµ',
        soundcloud: '‚òÅÔ∏è',
        youtube: '‚ñ∂Ô∏è',
        instagram: 'üì∑',
        twitter: 'üê¶',
        github: 'üíª',
        document: 'üìÑ',
        website: 'üåê'
      };
      return icons[icon] || 'üîó';
    }

    showError(message) {
      document.getElementById('loading-state').style.display = 'none';
      document.getElementById('error-state').style.display = 'flex';
      document.getElementById('error-message').textContent = message;
    }
  }

  // Global functions
  async function toggleLike() {
    const walletAddress = window.walletManager?.connectedWallet;
    if (!walletAddress) {
      alert('Please connect your wallet to like this project');
      return;
    }

    try {
      const response = await fetch('/api/projects/like', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          walletAddress,
          slug: slug
        })
      });

      const data = await response.json();
      if (data.success) {
        document.getElementById('heart-icon').textContent = data.liked ? '‚ù§Ô∏è' : 'ü§ç';
        document.getElementById('like-count').textContent = data.like_count.toLocaleString();
        document.getElementById('like-btn').classList.toggle('liked', data.liked);
      }
    } catch (error) {
      console.error('Failed to toggle like:', error);
    }
  }

  function shareProject() {
    if (navigator.share) {
      navigator.share({
        title: document.getElementById('project-title').textContent,
        url: window.location.href
      });
    } else {
      navigator.clipboard.writeText(window.location.href);
      alert('Link copied to clipboard!');
    }
  }

  function editProject() {
    window.location.href = `/profile?edit-project=${slug}`;
  }

  // Initialize
  const projectManager = new ProjectPageManager();
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => projectManager.initialize(), 100);
  });
</script>

