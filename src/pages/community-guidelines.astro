    }

    .legal-header h1 {
      font-size: 2rem;
    }

    .legal-nav {
      flex-direction: column;
      gap: 1rem;
    }

    .rules-grid, .values-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
