---
/**
 * about.astro - About Purple Point
 * Comprehensive overview of the platform, roles, and integrated hubs
 */
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About Purple Point" activeSection="about">
  <main class="about-page">
    <!-- Hero Section -->
    <section class="about-hero">
      <div class="container">
        <div class="hero-badge">
          <span class="badge-icon">üé§</span>
          <span class="badge-text">Built for Community</span>
        </div>
        <h1 class="hero-title">
          <span class="title-line">FREE Forever.</span>
          <span class="title-line accent">Open Source.</span>
          <span class="title-line">Community Owned.</span>
