  </main>
</BaseLayout>

<style>
  .about-page {
    background: #0a0a0a;
    color: #fff;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section */
  .about-hero {
    padding: 6rem 0 4rem;
    text-align: center;
    background: linear-gradient(180deg, #1a1a2e 0%, #0a0a0a 100%);
    border-bottom: 2px solid #333;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(0, 255, 0, 0.1);
    border: 1px solid #00ff00;
    padding: 8px 20px;
    margin-bottom: 2rem;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    color: #00ff00;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-family: 'Courier New', monospace;
  }

  .title-line {
    display: block;
  }

  .title-line.accent {
    color: #00ff00;
    text-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
  }

  .hero-description {
    font-size: 1.25rem;
    color: #aaa;
    max-width: 700px;
    margin: 0 auto 2rem;
    line-height: 1.7;
  }

  .hero-description strong {
    color: #00ff00;
  }

  .open-source-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .license-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #1a1a1a;
    border: 1px solid #333;
    padding: 10px 16px;
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
  }

  .license-icon {
    font-size: 1.2rem;
  }

  /* Section Styles */
  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
    font-family: 'Courier New', monospace;
  }

  .section-subtitle {
    text-align: center;
    color: #888;
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  /* Mission Section */
  .mission-section {
    padding: 5rem 0;
    background: #111;
  }

  .mission-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .mission-card {
    background: #1a1a1a;
    border: 2px solid #333;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s;
  }

  .mission-card:hover {
    border-color: #00ff00;
    transform: translateY(-5px);
  }

  .mission-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .mission-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: #00ff00;
  }

  .mission-card p {
    color: #888;
    line-height: 1.6;
  }

  /* Roles Section */
  .roles-section {
    padding: 5rem 0;
    background: #0a0a0a;
  }

  .roles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
  }

  .category-title {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'Courier New', monospace;
  }

  .status-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .status-dot.active {
    background: #00ff00;
    box-shadow: 0 0 10px #00ff00;
  }

  .status-dot.coming {
    background: #ff00ff;
    box-shadow: 0 0 10px #ff00ff;
  }

  .category-title.active {
    color: #00ff00;
  }

  .category-title.coming {
    color: #ff00ff;
  }

  .role-card {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: #1a1a1a;
    border: 2px solid #333;
    margin-bottom: 1rem;
    transition: all 0.3s;
  }

  .role-card.active:hover {
    border-color: #00ff00;
  }

  .role-card.coming {
    opacity: 0.7;
  }

  .role-card.coming:hover {
    border-color: #ff00ff;
    opacity: 1;
  }

  .role-icon {
    font-size: 2rem;
    min-width: 50px;
    text-align: center;
  }

  .role-content h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .role-content p {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .role-cta {
    color: #00ff00;
    font-size: 0.85rem;
    font-weight: bold;
    text-decoration: none;
    font-family: 'Courier New', monospace;
  }

  .role-cta:hover {
    text-decoration: underline;
  }

  .coming-badge {
    display: inline-block;
    background: #ff00ff;
    color: #fff;
    font-size: 0.7rem;
    padding: 3px 10px;
    font-weight: bold;
    font-family: 'Courier New', monospace;
  }

  /* Hubs Section */
  .hubs-section {
    padding: 5rem 0;
    background: #111;
  }

  .hubs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .hub-card {
    background: #1a1a1a;
    border: 2px solid #333;
    padding: 2rem;
    transition: all 0.3s;
  }

  .hub-card.approvideo:hover {
    border-color: #00ffff;
  }

  .hub-card.peace:hover {
    border-color: #ffff00;
  }

  .hub-card.scd:hover {
    border-color: #00ff00;
  }

  .hub-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .hub-icon {
    font-size: 2.5rem;
  }

  .hub-status {
    font-size: 0.75rem;
    padding: 4px 12px;
    background: #333;
    color: #888;
    font-family: 'Courier New', monospace;
    text-transform: uppercase;
  }

  .hub-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #fff;
  }

  .hub-description {
    color: #888;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .hub-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }

  .hub-features li {
    padding: 8px 0;
    border-bottom: 1px solid #333;
    font-size: 0.9rem;
    color: #aaa;
  }

  .hub-features li:last-child {
    border-bottom: none;
  }

  .hub-actions {
    display: flex;
    gap: 1rem;
  }

  .hub-cta {
    padding: 10px 20px;
    font-family: 'Courier New', monospace;
    font-size: 0.85rem;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.2s;
  }

  .hub-cta.primary {
    background: #00ff00;
    color: #000;
    border: 2px solid #00ff00;
  }

  .hub-cta.primary:hover {
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
  }

  .hub-cta.secondary {
    background: transparent;
    color: #888;
    border: 2px solid #333;
  }

  .hub-cta.secondary:hover {
    border-color: #888;
    color: #fff;
  }

  /* Get Started Section */
  .get-started-section {
    padding: 5rem 0;
    background: #0a0a0a;
  }

  .start-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .start-card {
    display: block;
    background: #1a1a1a;
    border: 2px solid #333;
    padding: 2rem 1.5rem;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s;
    position: relative;
  }

  .start-card:hover {
    transform: translateY(-5px);
    border-color: #00ff00;
  }

  .start-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .start-card h3 {
    color: #fff;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .start-card p {
    color: #888;
    font-size: 0.85rem;
    line-height: 1.5;
  }

