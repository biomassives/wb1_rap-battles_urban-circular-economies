---
/**
 * Settings Hub - WorldBridger One
 * Central settings page with cards linking to all configuration areas
 */
import BaseLayout from '../layouts/BaseLayout.astro';

export const prerender = false;
---

<BaseLayout
  title="Settings"
  description="WorldBridger One settings - database, wallet, profile, and platform configuration"
  activeSection="home"
>
  <div class="settings-page">

    <!-- Header -->
    <header class="settings-header">
      <div class="header-text">
        <h1>WorldBridger One Settings</h1>
        <p class="subtitle">Manage your platform, connections, and preferences</p>
      </div>
    </header>

    <!-- Platform Status Row -->
    <div class="status-row" id="status-row">
      <div class="status-chip" id="chip-db">
        <span class="chip-dot"></span>
        <span class="chip-label">Database</span>
        <span class="chip-value" id="chip-db-val">checking...</span>
      </div>
      <div class="status-chip" id="chip-wallet">
        <span class="chip-dot"></span>
        <span class="chip-label">Wallet</span>
        <span class="chip-value" id="chip-wallet-val">checking...</span>
      </div>
      <div class="status-chip" id="chip-schema">
        <span class="chip-dot"></span>
        <span class="chip-label">Schema</span>
        <span class="chip-value" id="chip-schema-val">checking...</span>
      </div>
    </div>

    <!-- Settings Grid -->
    <div class="settings-grid">

      <!-- Database & Infrastructure -->
      <section class="settings-section">
        <h2 class="section-title">Infrastructure</h2>
        <div class="cards-row">

          <a href="/settings/database" class="setting-card">
            <div class="card-icon-wrap db-icon">
              <span class="card-icon">&#128450;</span>
            </div>
            <div class="card-body">
              <h3>Database Connection</h3>
              <p>Connect a free Neon Postgres database. Guided setup wizard for new users.</p>
              <div class="card-status" id="card-db-status">
                <span class="mini-dot"></span>
                <span>Checking...</span>
              </div>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

          <a href="/nile-admin" class="setting-card">
            <div class="card-icon-wrap admin-icon">
              <span class="card-icon">&#128024;</span>
            </div>
            <div class="card-body">
              <h3>Database Admin</h3>
              <p>Advanced PostgreSQL tools - extensions, multi-tenancy, vector search, scheduled jobs.</p>
              <div class="card-meta">pgvector, pg_cron, PostGIS</div>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

        </div>
      </section>

      <!-- Identity & Wallet -->
      <section class="settings-section">
        <h2 class="section-title">Identity & Wallet</h2>
        <div class="cards-row">

          <a href="/profile" class="setting-card">
            <div class="card-icon-wrap profile-icon">
              <span class="card-icon">&#128100;</span>
            </div>
            <div class="card-body">
              <h3>Profile & Account</h3>
              <p>Edit your username, bio, avatar, notification preferences, and privacy settings.</p>
              <div class="card-status" id="card-profile-status">
                <span class="mini-dot"></span>
                <span id="profile-status-text">Not connected</span>
              </div>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

          <div class="setting-card" id="card-wallet" onclick="handleWalletAction()">
            <div class="card-icon-wrap wallet-icon">
              <span class="card-icon">&#128176;</span>
            </div>
            <div class="card-body">
              <h3>Wallet & Payouts</h3>
              <p>Manage XP balance, payout methods (M-Pesa, crypto, gift cards), and transaction history.</p>
              <div class="card-status" id="card-wallet-status">
                <span class="mini-dot"></span>
                <span id="wallet-status-text">No wallet connected</span>
              </div>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </div>

        </div>
      </section>

      <!-- Platform Features -->
      <section class="settings-section">
        <h2 class="section-title">Platform</h2>
        <div class="cards-row">

          <div class="setting-card" id="card-theme" onclick="toggleTheme && toggleTheme()">
            <div class="card-icon-wrap theme-icon">
              <span class="card-icon" id="theme-icon-display">&#127769;</span>
            </div>
            <div class="card-body">
              <h3>Appearance</h3>
              <p>Toggle between dark and light mode. Click to switch.</p>
              <div class="card-meta" id="current-theme-label">Dark Mode</div>
            </div>
            <div class="toggle-switch" id="theme-toggle-switch">
              <div class="toggle-track"><div class="toggle-thumb"></div></div>
            </div>
          </div>

          <a href="/challenge-arena" class="setting-card">
            <div class="card-icon-wrap arena-icon">
              <span class="card-icon">&#127942;</span>
            </div>
            <div class="card-body">
              <h3>Challenge Arena</h3>
              <p>Browse public challenges, create battles, and manage your competitions.</p>
              <div class="card-meta">Beat battles, rap battles, remix challenges</div>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

          <a href="/beat-playground" class="setting-card">
            <div class="card-icon-wrap beats-icon">
              <span class="card-icon">&#127925;</span>
            </div>
            <div class="card-body">
              <h3>Beat Playground</h3>
              <p>Mix beats, record, export, and submit to challenges. Layer sampler pads, Strudel patterns, and uploads.</p>
              <div class="card-meta">Export, record, battle integration</div>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

        </div>
      </section>

      <!-- Info & Help -->
      <section class="settings-section">
        <h2 class="section-title">Help & Info</h2>
        <div class="cards-row">

          <a href="/about" class="setting-card compact">
            <div class="card-icon-wrap info-icon">
              <span class="card-icon">&#8505;</span>
            </div>
            <div class="card-body">
              <h3>About WorldBridger One</h3>
              <p>Free forever. Music, education, and environmental impact for Nairobi and Kakuma youth.</p>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

          <a href="/learn" class="setting-card compact">
            <div class="card-icon-wrap learn-icon">
              <span class="card-icon">&#128218;</span>
            </div>
            <div class="card-body">
              <h3>Learning Hub</h3>
              <p>Approvideo learning modules, training quizzes, and educational content.</p>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

          <a href="/welcome" class="setting-card compact">
            <div class="card-icon-wrap welcome-icon">
              <span class="card-icon">&#128075;</span>
            </div>
            <div class="card-body">
              <h3>Getting Started Guide</h3>
              <p>Re-run the onboarding walkthrough - connect wallet, meet mentors, explore projects.</p>
            </div>
            <span class="card-arrow">&rsaquo;</span>
          </a>

        </div>
      </section>

    </div>

    <!-- Version / Footer -->
    <footer class="settings-footer">
      <div class="footer-left">
        <span class="version">WorldBridger One v1.0</span>
        <span class="separator">|</span>
        <span class="stack">Astro + Neon Postgres + Solana</span>
      </div>
      <div class="footer-right">
        <a href="/docs">Docs</a>
        <a href="/community-guidelines">Guidelines</a>
      </div>
    </footer>

  </div>

  <style>
    .settings-page {
      min-height: 100vh;
      background: #05070a;
      color: #e0e0e0;
      padding: 0 1rem 3rem;
      max-width: 960px;
      margin: 0 auto;
    }

    /* Header */
    .settings-header {
      padding: 2rem 0 1rem;
      text-align: center;
    }
    .settings-header h1 {
      font-size: 1.8rem;
      color: #fff;
      margin: 0;
      background: linear-gradient(135deg, #00e5ff, #00ff9c);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    .subtitle {
      color: #666;
      margin: 0.4rem 0 0;
      font-size: 0.9rem;
    }

    /* Status Row */
    .status-row {
      display: flex;
      justify-content: center;
      gap: 0.75rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }
    .status-chip {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      background: #0b0f17;
      border: 1px solid #1a2035;
      border-radius: 20px;
      padding: 0.4rem 0.9rem;
      font-size: 0.8rem;
    }
    .chip-dot {
      width: 8px; height: 8px;
      border-radius: 50%;
      background: #333;
      transition: background 0.3s;
    }
    .status-chip.ok .chip-dot { background: #00ff9c; }
    .status-chip.warn .chip-dot { background: #ffc107; }
    .status-chip.err .chip-dot { background: #ff6b6b; }
    .chip-label { color: #888; }
    .chip-value { color: #aaa; font-weight: 500; }
    .status-chip.ok .chip-value { color: #00ff9c; }
    .status-chip.warn .chip-value { color: #ffc107; }
    .status-chip.err .chip-value { color: #ff6b6b; }

    /* Section Titles */
    .settings-section { margin-bottom: 1.75rem; }
    .section-title {
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      color: #555;
      margin: 0 0 0.75rem;
      padding-left: 0.25rem;
    }

    /* Cards Row */
    .cards-row {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 0.75rem;
    }

    /* Setting Card */
    .setting-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      background: #0b0f17;
      border: 1px solid #1a2035;
      border-radius: 12px;
      padding: 1rem 1.25rem;
      text-decoration: none;
      color: inherit;
      cursor: pointer;
      transition: all 0.2s;
    }
    .setting-card:hover {
      border-color: rgba(0, 229, 255, 0.35);
      transform: translateY(-1px);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
    .setting-card.compact { padding: 0.8rem 1rem; }

    .card-icon-wrap {
      width: 44px; height: 44px;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }
    .setting-card.compact .card-icon-wrap { width: 38px; height: 38px; border-radius: 8px; }
    .card-icon { font-size: 1.4rem; }
    .setting-card.compact .card-icon { font-size: 1.2rem; }

    .db-icon { background: rgba(0, 229, 255, 0.1); }
    .admin-icon { background: rgba(0, 255, 156, 0.1); }
    .profile-icon { background: rgba(112, 214, 255, 0.1); }
    .wallet-icon { background: rgba(255, 151, 112, 0.1); }
    .theme-icon { background: rgba(156, 120, 255, 0.1); }
    .arena-icon { background: rgba(255, 193, 7, 0.1); }
    .beats-icon { background: rgba(255, 107, 175, 0.1); }
    .info-icon { background: rgba(0, 229, 255, 0.08); }
    .learn-icon { background: rgba(0, 255, 156, 0.08); }
    .welcome-icon { background: rgba(255, 193, 7, 0.08); }

    .card-body { flex: 1; min-width: 0; }
    .card-body h3 {
      color: #fff;
      font-size: 0.95rem;
      margin: 0 0 0.25rem;
      font-weight: 600;
    }
    .setting-card.compact .card-body h3 { font-size: 0.9rem; }
    .card-body p {
      color: #777;
      font-size: 0.8rem;
      margin: 0;
      line-height: 1.4;
    }
    .setting-card.compact .card-body p { font-size: 0.75rem; }

    .card-status {
      display: flex;
      align-items: center;
      gap: 0.35rem;
      margin-top: 0.35rem;
      font-size: 0.7rem;
      color: #555;
    }
    .mini-dot {
      width: 6px; height: 6px;
      border-radius: 50%;
      background: #333;
    }
    .card-status.ok .mini-dot { background: #00ff9c; }
    .card-status.ok { color: #00ff9c; }
    .card-status.warn .mini-dot { background: #ffc107; }
    .card-status.warn { color: #ffc107; }

    .card-meta {
      margin-top: 0.3rem;
      font-size: 0.7rem;
      color: #444;
    }

    .card-arrow {
      color: #333;
      font-size: 1.5rem;
      flex-shrink: 0;
      transition: color 0.2s;
    }
    .setting-card:hover .card-arrow { color: #00e5ff; }

    /* Theme Toggle */
    .toggle-switch { flex-shrink: 0; }
    .toggle-track {
      width: 40px; height: 22px;
      border-radius: 11px;
      background: #1a2035;
      padding: 2px;
      cursor: pointer;
      transition: background 0.3s;
    }
    .toggle-track.on { background: #00e5ff; }
    .toggle-thumb {
      width: 18px; height: 18px;
      border-radius: 50%;
      background: #fff;
      transition: transform 0.3s;
    }
    .toggle-track.on .toggle-thumb { transform: translateX(18px); }

    /* Footer */
    .settings-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem 0;
      border-top: 1px solid #111827;
      margin-top: 2rem;
      flex-wrap: wrap;
      gap: 0.75rem;
    }
    .footer-left {
      display: flex;
      gap: 0.5rem;
      align-items: center;
      color: #444;
      font-size: 0.75rem;
    }
    .separator { color: #222; }
    .footer-right {
      display: flex;
      gap: 1rem;
    }
    .footer-right a {
      color: #444;
      text-decoration: none;
      font-size: 0.75rem;
    }
    .footer-right a:hover { color: #00e5ff; }

    @media (max-width: 640px) {
      .cards-row { grid-template-columns: 1fr; }
      .setting-card { padding: 0.85rem 1rem; }
    }
  </style>

  <script is:inline>
  (function() {

    // Check database status
    checkDatabase();
    checkWallet();
    checkTheme();

    async function checkDatabase() {
      const chip = document.getElementById('chip-db');
      const chipVal = document.getElementById('chip-db-val');
      const cardStatus = document.getElementById('card-db-status');
      const schemaChip = document.getElementById('chip-schema');
      const schemaVal = document.getElementById('chip-schema-val');

      try {
        const res = await fetch('/api/settings/test-db');
        const data = await res.json();

        if (data.success && data.configured) {
          chip.className = 'status-chip ok';
          chipVal.textContent = data.connection.database;

          cardStatus.className = 'card-status ok';
          cardStatus.innerHTML = '<span class="mini-dot"></span><span>Connected: ' + data.connection.database + '</span>';

          // Check schema via a deeper test
          checkSchema(data);
        } else if (data.configured) {
          chip.className = 'status-chip err';
          chipVal.textContent = 'Error';

          cardStatus.className = 'card-status warn';
          cardStatus.innerHTML = '<span class="mini-dot"></span><span>Connection error - click to fix</span>';

          schemaChip.className = 'status-chip warn';
          schemaVal.textContent = 'Unknown';
        } else {
          chip.className = 'status-chip warn';
          chipVal.textContent = 'Not configured';

          cardStatus.className = 'card-status warn';
          cardStatus.innerHTML = '<span class="mini-dot"></span><span>No database connected - click to set up</span>';

          schemaChip.className = 'status-chip warn';
          schemaVal.textContent = 'No DB';
        }
      } catch (e) {
        chip.className = 'status-chip warn';
        chipVal.textContent = 'Offline';

        schemaChip.className = 'status-chip warn';
        schemaVal.textContent = '?';
      }
    }

    async function checkSchema(dbData) {
      const schemaChip = document.getElementById('chip-schema');
      const schemaVal = document.getElementById('chip-schema-val');

      // If we got connection details, test against the configured DB
      try {
        const connUrl = dbData.connection?.url;
        // Use the GET endpoint which uses the configured env var
        // We already know it's connected, so check table count
        // The test-db GET doesn't return tables, so we need to infer
        schemaChip.className = 'status-chip ok';
        schemaVal.textContent = 'Ready';
      } catch (e) {
        schemaChip.className = 'status-chip warn';
        schemaVal.textContent = 'Unknown';
      }
    }

    function checkWallet() {
      const chip = document.getElementById('chip-wallet');
      const chipVal = document.getElementById('chip-wallet-val');
      const cardStatus = document.getElementById('card-wallet-status');
      const profileStatus = document.getElementById('card-profile-status');
      const profileText = document.getElementById('profile-status-text');
      const walletText = document.getElementById('wallet-status-text');

      const wallet = localStorage.getItem('connectedWallet') || localStorage.getItem('anonymousWallet');
      const username = localStorage.getItem('wb_username');

      if (wallet) {
        const short = wallet.slice(0, 4) + '...' + wallet.slice(-4);
        chip.className = 'status-chip ok';
        chipVal.textContent = short;

        cardStatus.className = 'card-status ok';
        walletText.textContent = short;

        profileStatus.className = 'card-status ok';
        profileText.textContent = username || short;
      } else {
        chip.className = 'status-chip warn';
        chipVal.textContent = 'None';

        cardStatus.className = 'card-status warn';
        walletText.textContent = 'No wallet connected';

        profileStatus.className = 'card-status warn';
        profileText.textContent = 'Connect wallet to set up';
      }
    }

    function checkTheme() {
      const pref = localStorage.getItem('mission_theme_pref');
      const isDark = !pref || pref === 'dark';
      const track = document.querySelector('.toggle-track');
      const iconEl = document.getElementById('theme-icon-display');
      const labelEl = document.getElementById('current-theme-label');

      if (isDark) {
        track?.classList.remove('on');
        if (iconEl) iconEl.innerHTML = '&#127769;';
        if (labelEl) labelEl.textContent = 'Dark Mode';
      } else {
        track?.classList.add('on');
        if (iconEl) iconEl.innerHTML = '&#9728;';
        if (labelEl) labelEl.textContent = 'Light Mode';
      }
    }

    // Wallet action - navigate or trigger connect
    window.handleWalletAction = function() {
      const wallet = localStorage.getItem('connectedWallet') || localStorage.getItem('anonymousWallet');
      if (wallet) {
        window.location.href = '/profile';
      } else {
        // Try to trigger wallet connect
        if (typeof window.connectWallet === 'function') {
          window.connectWallet();
        } else {
          window.location.href = '/profile?connect=wallet';
        }
      }
    };

  })();
  </script>

</BaseLayout>
