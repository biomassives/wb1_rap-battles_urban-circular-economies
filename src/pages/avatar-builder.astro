  <script is:inline>
    /**
     * Avatar Builder Engine
     */
    const canvas = document.getElementById('avatarCanvas');
    const ctx = canvas.getContext('2d');

    // Avatar State
    let avatarState = {
      character: 'chicken',
      bgColor: '#667eea',
      tintColor: '#ffffff',
      accessories: {
        hat: 'none',
        chain: 'none',
        eyes: 'none',
        prop: 'none'
      },
      userLevel: 1
    };

    // Character emoji map
    const characterEmojis = {
      chicken: 'ğŸ“',
      cat: 'ğŸ±',
      goat: 'ğŸ',
      pigeon: 'ğŸ•Šï¸',
      dog: 'ğŸ•',
      rabbit: 'ğŸ°'
    };

    // Accessory emoji map
    const accessoryEmojis = {
      hat: {
        crown: 'ğŸ‘‘',
        cap: 'ğŸ§¢',
        halo: 'ğŸ˜‡',
        wizard: 'ğŸ§™',
        party: 'ğŸ‰'
      },
      chain: {
        gold: 'ğŸ¥‡',
        diamond: 'ğŸ’',
        silver: 'ğŸ¥ˆ'
      },
      eyes: {
        sunglasses: 'ğŸ•¶ï¸',
        monocle: 'ğŸ§',
        laser: 'âš¡'
      },
      prop: {
        mic: 'ğŸ¤',
        money: 'ğŸ’°',
        fire: 'ğŸ”¥'
      }
    };

    // Initialize
    function init() {
      // Load user level from wallet manager
      if (window.walletManager) {
        avatarState.userLevel = 1; // TODO: Get from actual user data
      }

      document.getElementById('level-display').textContent = avatarState.userLevel;
      drawAvatar();
    }

    // Draw avatar on canvas
    function drawAvatar() {
      // Clear canvas
      ctx.fillStyle = avatarState.bgColor;
      ctx.fillRect(0, 0, 600, 600);

      // Draw gradient background
      const gradient = ctx.createRadialGradient(300, 300, 100, 300, 300, 400);
      gradient.addColorStop(0, avatarState.bgColor);
      const darkerColor = shadeColor(avatarState.bgColor, -30);
      gradient.addColorStop(1, darkerColor);
      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, 600, 600);

      // Draw border
      ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
      ctx.lineWidth = 4;
      ctx.strokeRect(20, 20, 560, 560);

      // Draw main character (large emoji)
      ctx.save();
      ctx.font = '280px serif';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      // Apply tint (simplified - just draw emoji)
      ctx.fillText(characterEmojis[avatarState.character], 300, 320);
      ctx.restore();

      // Draw accessories
      drawAccessories();

      // Draw signature
      ctx.font = '12px Inter';
      ctx.fillStyle = 'rgba(255, 255, 255, 0.3)';
      ctx.textAlign = 'right';
      ctx.fillText('PURPLE POINT AVATAR', 580, 580);
    }

    function drawAccessories() {
      const fontSize = 80;
      ctx.font = `${fontSize}px serif`;
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      // Hat (above character)
      if (avatarState.accessories.hat !== 'none') {
        const hatEmoji = accessoryEmojis.hat[avatarState.accessories.hat];
        if (hatEmoji) {
          ctx.fillText(hatEmoji, 300, 120);
        }
      }

      // Chain (below character)
      if (avatarState.accessories.chain !== 'none') {
        const chainEmoji = accessoryEmojis.chain[avatarState.accessories.chain];
        if (chainEmoji) {
          ctx.fillText(chainEmoji, 300, 420);
        }
      }

      // Eyes (on character)
      if (avatarState.accessories.eyes !== 'none') {
        const eyesEmoji = accessoryEmojis.eyes[avatarState.accessories.eyes];
        if (eyesEmoji) {
          ctx.font = `${fontSize}px serif`;
          ctx.fillText(eyesEmoji, 300, 260);
        }
      }

      // Prop (beside character)
      if (avatarState.accessories.prop !== 'none') {
        const propEmoji = accessoryEmojis.prop[avatarState.accessories.prop];
        if (propEmoji) {
          ctx.fillText(propEmoji, 460, 380);
        }
      }
    }

    // Character selection
    function selectCharacter(character) {
      avatarState.character = character;

      // Update active state
      document.querySelectorAll('[data-character]').forEach(btn => {
        btn.classList.remove('active');
      });
      document.querySelector(`[data-character="${character}"]`).classList.add('active');

      drawAvatar();
    }

    // Color selection
    function selectColor(type, color, element) {
      if (type === 'bg') {
        avatarState.bgColor = color;
        document.querySelectorAll('[data-color="bg"]').forEach(el => {
          el.classList.remove('active');
        });
      } else if (type === 'tint') {
        avatarState.tintColor = color;
        document.querySelectorAll('[data-color="tint"]').forEach(el => {
          el.classList.remove('active');
        });
      }

      element.classList.add('active');
      drawAvatar();
    }

    // Accessory toggle
    function toggleAccessory(type, accessory) {
      const btn = document.querySelector(`[data-accessory="${accessory}"]`);
      if (btn && btn.classList.contains('locked')) {
        alert('This accessory is locked! Level up to unlock it.');
        return;
      }

      avatarState.accessories[type] = accessory;

      // Update accessories count
      const count = Object.values(avatarState.accessories).filter(a => a !== 'none').length;
      document.getElementById('accessories-count').textContent = count;

      drawAvatar();
    }

    // Utility: Shade color
    function shadeColor(color, percent) {
      const num = parseInt(color.replace('#', ''), 16);
      const amt = Math.round(2.55 * percent);
      const R = (num >> 16) + amt;
      const G = (num >> 8 & 0x00FF) + amt;
      const B = (num & 0x0000FF) + amt;
      return '#' + (
        0x1000000 +
        (R < 255 ? R < 1 ? 0 : R : 255) * 0x10000 +
        (G < 255 ? G < 1 ? 0 : G : 255) * 0x100 +
        (B < 255 ? B < 1 ? 0 : B : 255)
      ).toString(16).slice(1);
    }

    // Download avatar
    function downloadAvatar() {
      const link = document.createElement('a');
      link.download = `purple-point-avatar-${Date.now()}.png`;
      link.href = canvas.toDataURL('image/png');
      link.click();
    }

    // Save as profile picture
    function saveAsProfilePic() {
      const avatarDataUrl = canvas.toDataURL('image/png');

      // Save to localStorage for now
      localStorage.setItem('profileAvatar', avatarDataUrl);

      alert('Avatar saved! Redirecting to profile...');
      setTimeout(() => {
        window.location.href = '/profile';
      }, 1000);
    }

    // Mint as NFT (placeholder)
    function mintAsNFT() {
      alert('NFT minting coming soon! This will mint your avatar as a composable NFT on Solana.');
    }

    // Initialize on load
    window.addEventListener('load', init);
  </script>

