---
import { useEffect } from 'astro:js-render';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cosmic Rap Battle</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/phaser/3.55.2/phaser.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #0b0c10;
            color: #c5c6c7;
            margin: 0;
            padding: 0;
            text-align: center;
        }
        #gameContainer {
            width: 100%;
            height: 100vh;
            position: relative;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to the Cosmic Rap Battle!</h1>
    </header>
    
    <section id="astro">
        <div id="gameContainer"></div>
    </section>

    <script>
        const config = {
            type: Phaser.AUTO,
            width: window.innerWidth,
            height: window.innerHeight,
            physics: {
                default: 'arcade',
                arcade: {
                    gravity: 0,
                    debug: false
                }
            },
            scene: {
                preload: preload,
                create: create,
                update: update
            }
        };

        const game = new Phaser.Game(config);
        let saucers;
        let sound;

        function preload() {
            this.load.image('saucer', 'path/to/saucer.png'); // Replace with actual image path
            this.load.audio('phaserSound', 'path/to/phaser.mp3'); // Replace with actual sound path
        }

        function create() {
            sound = this.sound.add('phaserSound');
            saucers = this.physics.add.group();
            
            // Create flying saucers
            for (let i = 0; i < 5; i++) {
                let saucer = saucers.create(Math.random() * 800, Math.random() * 600, 'saucer');
                saucer.setVelocity(Phaser.Math.Between(-200, 200), Phaser.Math.Between(-200, 200));
            }

            // Load user settings from localStorage
            loadUserSettings();

            // Start sound
            sound.loop = true;
            sound.play();
        }

        function update() {
            saucers.children.iterate((saucer) => {
                if (saucer.x < 0 || saucer.x > config.width || saucer.y < 0 || saucer.y > config.height) {
                    saucer.setVelocity(Phaser.Math.Between(-200, 200), Phaser.Math.Between(-200, 200));
                }
            });
        }

        function saveUserSettings(volume, genre) {
            localStorage.setItem('userVolume', volume);
            localStorage.setItem('userGenre', genre);
        }

        function loadUserSettings() {
            const volume = localStorage.getItem('userVolume') || 1.0; // Default volume
            const genre = localStorage.getItem('userGenre') || 'hip-hop'; // Default genre
            // You can apply settings as needed (e.g., audio volume)
        }
        
        // Save user settings example
        saveUserSettings(1.0, 'hip-hop'); // Demo data
    </script>
</body>
</html>
