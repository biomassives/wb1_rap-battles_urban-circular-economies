    start() {
      if (this.audioCtx.state === 'suspended') {
        this.audioCtx.resume();
      }
      this.isPlaying = true;
      document.getElementById('seq-play-text').textContent = 'Pause';
      document.getElementById('seq-play-icon').textContent = '‚è∏Ô∏è';
