    .hero-title {
      font-size: 4rem;
      font-weight: 900;
      line-height: 1.2;
      margin-bottom: 2rem;
      color: var(--color-white);
      letter-spacing: -2px;
      text-shadow: 4px 4px 0 var(--color-black);
      border: 4px solid var(--color-white);
      padding: 1.5rem;
      background: var(--color-black);
      box-shadow: 8px 8px 0 var(--color-white);
    }

    .hero-tagline {
      font-size: 1.5rem;
      line-height: 2;
      margin-bottom: 3rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      background: var(--color-dark-gray);
      padding: 2rem;
      border: 2px solid var(--color-white);
      box-shadow: 4px 4px 0 var(--color-neon-green);
      text-align: left;
    }

    .hero-actions {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      align-items: center;
      margin-bottom: 3rem;
      flex-wrap: wrap;
    }

    .btn-battle-start {
      display: inline-flex;
      align-items: center;
      gap: 1rem;
      padding: 1.25rem 2.5rem;
      background: linear-gradient(135deg, #7c3aed 0%, #ec4899 100%);
      color: white;
      text-decoration: none;
      border-radius: 50px;
      font-size: 1.25rem;
      font-weight: 700;
      transition: all 0.3s ease;
      box-shadow: 0 10px 30px rgba(124, 58, 237, 0.4);
      position: relative;
      overflow: hidden;
    }

    .btn-battle-start::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.5s ease;
    }

    .btn-battle-start:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 15px 40px rgba(124, 58, 237, 0.6);
    }

    .btn-battle-start:hover::before {
