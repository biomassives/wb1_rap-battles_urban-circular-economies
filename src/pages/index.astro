  <script>
    // Sampler overlay functionality
    document.addEventListener('DOMContentLoaded', () => {
      const fab = document.getElementById('sampler-fab');
      const overlay = document.getElementById('sampler-overlay');
      const closeBtn = document.getElementById('close-sampler');

      if (fab && overlay) {
        // Open sampler overlay
        fab.addEventListener('click', () => {
          overlay.classList.add('active');
          document.body.style.overflow = 'hidden';

          // Award XP for opening sampler
          if (window.progressManager) {
            window.progressManager.awardXP(2, 'music_exploration', 'Opened sampler pads');
          }
        });

        // Close sampler overlay
        const closeSampler = () => {
          overlay.classList.remove('active');
          document.body.style.overflow = '';
        };

        closeBtn?.addEventListener('click', closeSampler);

        // Close on overlay background click
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) {
            closeSampler();
          }
        });

        // Close on ESC key
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && overlay.classList.contains('active')) {
            closeSampler();
          }
        });
      }
    });
