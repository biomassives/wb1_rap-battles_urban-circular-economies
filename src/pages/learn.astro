</BaseLayout>

<style>
  .learn-page {
    background: #0a0a0a;
    color: #fff;
    min-height: 100vh;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .learn-hero {
    padding: 6rem 0 4rem;
    text-align: center;
    background: linear-gradient(180deg, #1a2a3a 0%, #0a0a0a 100%);
    border-bottom: 2px solid #00ffff;
  }

  .hub-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(0, 255, 255, 0.1);
    border: 1px solid #00ffff;
    padding: 8px 20px;
    margin-bottom: 2rem;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    color: #00ffff;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 1.5rem;
    font-family: 'Courier New', monospace;
    color: #00ffff;
    text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
  }

  .hero-description {
    font-size: 1.2rem;
    color: #aaa;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .coming-features {
    padding: 5rem 0;
  }

  .section-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
    font-family: 'Courier New', monospace;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .feature-card {
    background: #1a1a1a;
    border: 2px solid #333;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s;
  }

  .feature-card:hover {
    border-color: #00ffff;
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    color: #00ffff;
    margin-bottom: 0.75rem;
  }

  .feature-card p {
    color: #888;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .cta-section {
    text-align: center;
    padding: 3rem;
    background: #111;
    border: 2px solid #333;
  }

  .cta-text {
    color: #888;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }

  .cta-btn {
    display: inline-block;
    background: #00ffff;
    color: #000;
    padding: 12px 30px;
    font-family: 'Courier New', monospace;
    font-weight: bold;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cta-btn:hover {
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
  }
</style>
