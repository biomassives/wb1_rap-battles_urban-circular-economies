 */
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Approvideo Learning Hub" activeSection="learn">
  <main class="learn-page">
    <section class="learn-hero">
      <div class="container">
        <div class="hub-badge">
          <span class="badge-icon">ðŸ“º</span>
          <span class="badge-text">Coming Soon</span>
        </div>
        <h1 class="hero-title">Approvideo Learning Hub</h1>
        <p class="hero-description">
          Video-based learning for beat production, business skills, environmental education,
          and community building. Learn from mentors, earn certificates, and grow your skills.
        </p>
      </div>
    </section>

    <section class="coming-features">
      <div class="container">
        <h2 class="section-title">What's Coming</h2>
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-icon">ðŸŽ¬</div>
            <h3>Video Courses</h3>
            <p>Step-by-step tutorials from community mentors and industry professionals.</p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸ“œ</div>
            <h3>Certificates</h3>
            <p>Earn verifiable credentials stored on blockchain for completed courses.</p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸŽµ</div>
            <h3>Music Production</h3>
            <p>Learn beat making, mixing, mastering, and music theory fundamentals.</p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸ’¼</div>
            <h3>Entrepreneurship</h3>
            <p>Business basics, marketing, and building sustainable creative careers.</p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">ðŸŒ±</div>
